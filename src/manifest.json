{
  "name": "Nay!",
  "author": "Fausto Núñez Alberro <fausto.nunez@mailbox.org> (https://brainlessdeveloper.com)",
  "version": "0.0.0",
  "description": "Say \"nay!\" to URLs in your blacklist. Disable links and optionally access to matching URLs.",
  "browser_specific_settings": {
    "gecko": {
      "id": "@nay-extension"
    }
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["activeTab", "storage"],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Nay!",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "js": ["block.js"],
      "matches": ["*://*/*"]
    }
  ]
}
